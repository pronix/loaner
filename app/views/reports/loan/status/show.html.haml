- title "Loan status"

.report
  %table
    %tr
      %th Account No
      %th State
      %th Amount
      %th Interest
      %th No of Terms
    - @loans.each do |loan|
      %tr
        %td= loan.account_no
        %td= loan.state
        %td= loan.amount
        %td= loan.interest
        %td= loan.no_of_terms

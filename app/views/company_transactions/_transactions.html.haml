%table.company_transactions
  %tr
    %th Date
    %th Type
    %th Amount
    %th Book
    %th Loan
  - @transactions.each do |transaction|
    %tr{:class => cycle("c", "n")}
      %td= transaction.date
      %td= transaction.transaction_type
      %td= transaction.amount
      %td= link_to transaction.loan.book.name, edit_book_path(transaction.loan.book) if transaction.loan
      %td= link_to "Show Loan", edit_loan_path(transaction.loan) if transaction.loan

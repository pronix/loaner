.menu_left
  %ul.menu_list
    - if current_user
      %li= link_to "Logout", logout_path
    - else
      %li= link_to "Login", login_path
      %li= link_to "Register", new_user_path

    %li= link_to "People", people_path
    - if request[:controller] == "people"
      %ul
        %li= link_to "New Person", new_person_path

    %li= link_to "Loans", loans_path
    - if request[:controller] == "loans"
      %ul
        %li= link_to "Loan Calculator", calculators_path
        %li= link_to "Loan Disbursement", new_loan_path
        %li= link_to "Collection", loans_path

    %li= link_to "Company Transactions", transactions_path
    - if request[:controller] == "transactions"
      %ul
        %li= "Receipts"
        %li= link_to "Payments", payments_transactions_path
        %li= "Book Transfer"
        %li= "Accounts"

    %li= link_to "Reports", reports_root_path
    - if request.env["PATH_INFO"] =~ /\/reports/
      %ul
        %li= link_to "Payment Schedule", reports_payment_schedules_path
        %li= "For Submission"
        %li= "For Records"
        %li= "Borrower Reports"
        %li= link_to "Borrowers List", reports_borrowers_lists_path
        %li= "Book Statements"
        %li= "Payment Due Report"
        %li= "Loan Status"

    %li= link_to "Settings", settings_path
    - if request[:controller] == "settings"
      %ul
        %li= link_to "Company Profile", company_profiles_path
        %li= "User Rights"
        %li= link_to "Company Configuration", company_configurations_path
        %li= link_to "Client Details Modification", people_path

    %li= link_to "Backup & Restore", backups_path
    - if request[:controller] == "backups"
      %ul
        %li= link_to "Backup", backup_backups_path
        %li= link_to "Restore", backups_path
